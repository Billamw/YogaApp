<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/detail_pose_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/detail_pose_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@android:color/transparent"

            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Pose Name" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:id="@+id/edit_button"
            android:background="@null"
            android:src="@drawable/baseline_edit_24"
            android:contentDescription="Edit Icon"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/delete_button"
            android:background="@null"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="Edit Icon"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Description"/>

    <EditText
        android:id="@+id/detail_pose_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        android:text="Description of the pose" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Benefits"/>
    <EditText
        android:id="@+id/detail_pose_benefits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        android:text="Benefits of the pose" />

</LinearLayout>
